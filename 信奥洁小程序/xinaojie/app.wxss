/**app.wxss**/
@import 'style/weui.wxss';

page {
  background-color: #e0e0e0;
}

.page_login {
  width: 100%;
  height: 450rpx;
}

.page_bg {
  width: 100%;
  height: 250rpx;
  background: #09f;
}

.page_bd {
  padding-bottom: 40rpx;
}

.list_item {
  margin: 20rpx 0;
  background-color: #fff;
  border-radius: 10rpx;
  overflow: hidden;
}
.list_item_bottom {
  margin: 20rpx 0 120rpx 0;
  background-color: #fff;
  border-radius: 10rpx;
  overflow: hidden;
}

.item {
  padding: 10px;
  -webkit-transition: opacity 0.3s;
  transition: opacity 0.3s;
}

.item_border_bottom {
  border-bottom: 1px solid #e0e0e0;
  padding: 10px;
  -webkit-transition: opacity 0.3s;
  transition: opacity 0.3s;
}

.item_line_height {
  line-height: 80rpx;
}

.kind-list_item-hd {
  padding: 10px;
  -webkit-transition: opacity 0.3s;
  transition: opacity 0.3s;
}

.kind-list_item-hd_show {
  opacity: 0.4;
}

.kind-list_item-bd {
  height: 0;
  overflow: hidden;
}

.kind-list_item-bd_show {
  display: none;
  height: auto;
}

.kind-list_item-midden {
  padding: 10px 20px;
  -webkit-transition: opacity 0.3s;
  transition: opacity 0.3s;
}

.kind-list_item-context {
  padding-left: 10px;
  padding-right: 5px;
  -webkit-transition: opacity 0.3s;
  transition: opacity 0.3s;
}

.kind_justify_display {
  display: flex;
  justify-content: center;
}

.kind_item_border {
  width: 100%;
  height: 80rpx;
  border-bottom: 1px solid #e0e0e0;
}

.circle {
  width: 50rpx;
  height: 50rpx;
  border-radius: 50%;
  background-color: #c66000;
  line-height: 40rpx;
}

.text_small {
  font-size: 30rpx;
  color: #6c6c6c;
}

.text_big {
  font-size: 40rpx;
  color: #000;
  font-weight: bold;
}

.text_midden {
  font-size: 34rpx;
  color: #6c6c6c;
}

.text_midden_label {
  font-size: 34rpx;
  color: #000;
}

.text_small_circle {
  font-size: 24rpx;
  color: #fff;
}

.order_panel_bar {
  height: 110rpx;
  position: absolute;
  top: 50rpx;
  right: 20rpx;
  left: 20rpx;
  background: #fff;
  border-radius: 10rpx;
}

.order-navbar {
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  position: absolute;
  z-index: 500;
  top: 0;
  width: 100%;
}

.order-navbar_item {
  position: relative;
  display: block;
  -webkit-box-flex: 1;
  -webkit-flex: 1;
  flex: 1;
  padding: 13px 0 13px 0;
  text-align: center;
  border-right: 1px solid #e0e0e0;
}

.order-navbar_item.order-bar_item_on {
  color: #1aad19;
}

.weui-cells {
  margin-top: 0;
  opacity: 0;
  -webkit-transform: translateY(-50%);
  transform: translateY(-50%);
  -webkit-transition: 0.3s;
  transition: 0.3s;
}

.weui-cells:after, .weui-cells:before {
  display: none;
}

.weui-cells_show {
  opacity: 1;
  -webkit-transform: translateY(0);
  transform: translateY(0);
}

.weui-cell:before {
  right: 30rpx;
}

.img_panel {
  height: 220rpx;
  position: relative;
  margin-top: 20rpx;
}

.bottom_panel {
  width: 100%;
  height: 120rpx;
  position: fixed;
  bottom: 0;
  background-color: #fff;
  overflow: hidden;
  border-top: 1px solid #b0b0b0;
}

.kind_btn {
  width: 80%;
  position: relative;
  margin-top: 20rpx;
}

.kind_btn_small {
  line-height: 60rpx;
  height: 60rpx;
}
.kind_btn_small_margin {
  position: relative;
  line-height: 60rpx;
  height: 60rpx;
  margin-top: 10rpx;
}
.search_border{
   border: 1px solid #b0b0b0;
}

.icon-search_in-box {
  position: absolute;
  left: 20rpx;
  top: 34rpx;
}

.search-bar_input {
  height: 100rpx;
  line-height: 50rpx;
  font-size: 32rpx;
}

.kind_border_textArea {
  width: 90%;
  height: 180rpx;
  border: 1px solid #e0e0e0;
  position: relative;
  padding:30rpx 30rpx; 
  -webkit-transition: opacity 0.3s;
  transition: opacity 0.3s;
}
.currentWordNumber{
  font-size: 32rpx;
  color: gray;
  position: relative;
  margin-top:140rpx; 
  margin-left:80%; 
}
