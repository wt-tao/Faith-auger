/*##设备详情##*/
.page_bg{
  width: 100%;
  height: 150rpx;
  background: #0099FF 
}
 /*详情设备参数*/
.page_bd_spacing {
  position: absolute;
  top: 20rpx;
  left: 10rpx;
  right: 10rpx;
}

/*详情记录*/
.page_bd_midden {
  position: absolute;
  top: 370rpx;
  left: 10rpx;
  right: 10rpx;
}
.page_detail {
  width: 100%;
  height: 1200rpx;
  position: absolute;
  top: 20rpx;
  background: #fff;
  border-radius: 10rpx;
}
.item_record{
 border-bottom: 1px solid #e0e0e0;
}

/*评价弹框*/
.evaluation_mask {
  width: 100%;
  height: 100%;
  position: fixed;
  top: 0;
  left: 0;
  background: #000;
  opacity: 0.5;
  overflow: hidden;
  z-index: 9000;
  color: #fff;
}
.evaluation_dialog {
  width: 90%;
  overflow: hidden;
  position: fixed;
  left: 0;
  z-index: 9999;
  background: #fff;
  margin: -60rpx 35rpx;
  border-radius: 15rpx;
  padding-top: 50rpx;
}
.evaluation_title {
  text-align: center;
}
.evaluation_content {
  padding: 50rpx 50rpx;
  line-height:80rpx; 
}

/*详情底部按钮 */
.bottom_panel {
  width: 100%;
  height: 120rpx;
  position: fixed;
  bottom: 0;
  background-color: #fff;
  overflow: hidden;
  border: 1px solid #e0e0e0;
}
.repair {
  position: relative;
  margin-top: 20rpx;
}
.maintenance {
  position: relative;
  margin-top: 20rpx;
}
