/*分配人员弹框*/
.distribution_mask {
  width: 100%;
  height: 100%;
  position: fixed;
  top: 0;
  left: 0;
  background: #000;
  opacity: 0.5;
  overflow: hidden;
  z-index: 9000;
  color: #fff;
}
.distribution_dialog {
  width: 90%;
  overflow: hidden;
  position: fixed;
  left: 0;
  z-index: 9999;
  background: #fff;
  margin: -70rpx 35rpx;
  border-radius: 15rpx;
}
.distribution_title {
  padding:20rpx 80rpx;
  font-size: 40rpx;
  color: #000;
  font-weight: bold;
}
.distribution_content {
    padding: 20rpx 10rpx;
    line-height:80rpx; 
}
.button-sp-area{
    margin-top:50rpx;
    padding-top: 15px;
    width: 80%;
    height: 80rpx;
    line-height: 10rpx;
}



