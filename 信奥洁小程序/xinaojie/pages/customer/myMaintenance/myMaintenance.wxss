/*我的保养单*/
.page_bg {
  width: 100%;
  height: 150rpx;
  background: #09f;
}

/*搜索*/
.page_bd_search {
  position: absolute;
  top: 80rpx;
  left: 10rpx;
  right: 10rpx;
}

/*订单内容*/
.page_bd_midden {
  position: absolute;
  top: 180rpx;
  left: 10rpx;
  right: 10rpx;
}
.customer_panel {
  position:relative;
  margin-bottom: 150rpx;
}
.customer_bottom_panel{
  width: 100%;
  height: 130rpx;
  position: fixed;
  bottom: 0;
  background-color: #fff;
  overflow: hidden;
  display: flex;
  flex-direction: row;
}
.item_block {
  width:33.3%; 
  flex:1;
  text-align: center;
  border-right: 1px solid #e0e0e0;  
}
.item_hd {
  position: relative;
  padding: 10rpx;
  line-height: 10rpx;
  -webkit-transition: opacity 0.3s;
  transition: opacity 0.3s;
}
.bottom_img{
  width:70rpx;
  height:70rpx; 
}
.bottom_text{
  position: relative;
  margin-top: 20rpx;
  text-align: center;
  font-size: 34rpx;
  color: #6c6c6c;
}