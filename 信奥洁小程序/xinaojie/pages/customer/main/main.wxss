 /*底部*/
.customer_bottom_panel{
  width: 100%;
  height: 130rpx;
  position: fixed;
  bottom: 0;
  background-color: #fff;
  overflow: hidden;
  display: flex;
  flex-direction: row;
}
.item_block {
  width:33.3%; 
  flex:1;
  text-align: center;
  border-right: 1px solid #e0e0e0;  
}
.item_hd {
  position: relative;
  padding: 10rpx;
  line-height: 10rpx;
  -webkit-transition: opacity 0.3s;
  transition: opacity 0.3s;
}
.bottom_img{
  width:70rpx;
  height:70rpx; 
}
