/*选项卡*/
.order-navbar_title {
  display: inline-block;
  font-size: 15px;
  width: 20rpx;
  white-space: nowrap;
  word-wrap: normal;
}
.order-navbar_slider {
  position: absolute;
  content: " ";
  left: 0;
  bottom: 0;
  width: 150px;
  height: 3px;
  background-color: #1aad19;
  -webkit-transition: -webkit-transform 0.3s;
  transition: -webkit-transform 0.3s;
  transition: transform 0.3s;
  transition: transform 0.3s, -webkit-transform 0.3s;
}
