/*维修管理员订单列表顶部*/
.page_bg{
  width: 100%;
  height: 150rpx;
  background: #0099FF 
}
.order-navbar_title {
  display: inline-block;
  font-size: 15px;
  width: 20rpx;
  white-space: nowrap;
  word-wrap: normal;
}
.order-navbar_slider {
  position: absolute;
  content: " ";
  left: 0;
  bottom: 0;
  width: 150px;
  height: 3px;
  background-color: #1aad19;
  -webkit-transition: -webkit-transform 0.3s;
  transition: -webkit-transform 0.3s;
  transition: transform 0.3s;
  transition: transform 0.3s, -webkit-transform 0.3s;
}
/*搜索*/
.page_bd_search {
  position: absolute;
  top: 180rpx;
  left: 10rpx;
  right: 10rpx;
}
/*故障处理员订单列表*/
.page_bd_midden {
  position: absolute;
  top: 280rpx;
  left: 10rpx;
  right: 10rpx;
}
.fault_panel {
  position:relative;
  margin-bottom: 150rpx;
}
 /*底部*/
.fault_bottom_panel{
  width: 100%;
  height: 130rpx;
  position: fixed;
  bottom: 0;
  background-color: #fff;
  overflow: hidden;
  display: flex;
  flex-direction: row;
}
.item_block {
  width:33.3%; 
  flex:1;
  text-align: center;
  border-right: 1px solid #e0e0e0;  
}
.item_hd {
  position: relative;
  padding: 10rpx;
  line-height: 10rpx;
  -webkit-transition: opacity 0.3s;
  transition: opacity 0.3s;
}
.bottom_img{
  width:70rpx;
  height:70rpx; 
}
.bottom_text {
  position: relative;
  margin-top: 20rpx;
  text-align: center;
  font-size: 34rpx;
  color: #6c6c6c;
}